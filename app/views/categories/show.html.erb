<p id="notice"><%= notice %></p>

<table class="book_table">
  <thead>
    <tr>
      <th>Author name</th>
      <th>Book name</th>
      <th>Book price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
	  <% @books_by_category.each do |books| %>
	  	  <tr>
	        <td><%= books.author_name %></td>
	        <td><%= books.book_name %></td>
	        <td><%= books.book_price %></td>
	      </tr>
	  <%end%>
	</tbody>
</table>

<div>
	<%= link_to 'Edit', edit_category_path(@category) %> |
